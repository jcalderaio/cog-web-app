{
  "extends": "react-app",
  "plugins": ["react", "jsx-a11y", "import"],
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true,
    "commonjs": true
  },
  "rules": {
    "max-len": [1, { "code": 120, "ignoreComments": true, "ignoreTrailingComments": true, "ignoreUrls": true }],
    "no-plusplus": 0,
    "no-console": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/self-closing-comp": [
      "error",
      {
        "component": true,
        "html": false
      }
    ],
    "no-underscore-dangle": 0,
    "react/jsx-closing-bracket-location": 0,
    "react/jsx-no-bind": 0,
    "react/forbid-prop-types": 0,
    "object-shorthand": 0,
    "class-methods-use-this": 0,
    "arrow-body-style": 0,
    "comma-dangle": 0,
    "arrow-parens": 0,
    "no-restricted-syntax": 0,
    "array-callback-return": 0
  }
}
